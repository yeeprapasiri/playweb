# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /air                        controllers.Application.air()
GET     /freeze                     controllers.Application.freeze()
GET     /microwave                  controllers.Application.microwave()
GET     /washing                    controllers.Application.washing()
GET     /location                    controllers.Application.location()
GET     /promotion                   controllers.Application.promotion()
GET     /showpro                     controllers.Application.showPro()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
